
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

ec-canvas {
  width: 100%;
  height: 800px;
}

.table-title{
  position: absolute;
  top: 520px;
  margin: 10px;
}

.table{
  position: absolute;
  top: 550px;  
}

.table {
  display: table;
  margin: 8px;
  width: 96%;
  border-collapse: collapse; 
}

.table-tr {
  display: table-row; 
  height: 36px; 
}

.table-th {
  display: table-cell;    
  text-align: center;
  vertical-align: middle;
}

.table-td {
  display: table-cell;  
  text-align: center;
  vertical-align: middle;
  color: #666;
}

.bg-g{
  background: #E6F3F9;
}

.tleft{text-align: left; padding-left: 10px;}