<!--index.wxml-->
<wxs module="nf">
  var toFixed = function (value) {
    if (value){
      return value.toFixed(2);
    } else {
      return null;
    }
    
  }
  module.exports = {
    toFixed :toFixed
  }
</wxs>

<view class="table-title">部门绩效表 </view>
<view class="table">
  <view class="table-tr">
    <view class="table-th">姓名</view>
    <view class="table-th">部门</view>   
    <view class="table-th">月份</view>    
    <view class="table-th">绩效</view>
  </view>

  <view class="table-tr" wx:for="{{planScore}}" wx:key="id">
    <view class="table-td">{{item.userName}}</view>
    <view class="table-td">{{item.deptName}}</view>
    <view class="table-td">{{item.seq}}</view>
    <view class="table-td">{{item.score ? nf.toFixed(item.score) :""}}</view>    
  </view>

   
</view>
<view class="loading" bindtap="addMore">{{loadingMsg}}</view>

