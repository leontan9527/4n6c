/*点击发送文字消息按钮 显示发送语音消息列表css  开始*/
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top:25%;
  left: 0;
  z-index:9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius:36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  z-index:9999;
  background:#fff;
  border-top: 1rpx solid#ddd;
  border-left: 1rpx solid#ddd;
  border-right: 1rpx solid#ddd;
  border-bottom: 1rpx solid#ddd;
  border-radius: 4rpx;
  margin-left:0px;
  font-size:28rpx;
}

.place-holder {
  color: #666;
  font-size: 28rpx;
  margin-top: 10px;
  margin-left: 2px;
}

.modal-checkbox {
  display: flex;
  background:#fff;
  border-radius: 4rpx;
  font-size:28rpx;
  margin-top: 10px;
  margin-left:-1px;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid#dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50% ;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50% ;
  color: #ec5300;
  text-align: center;
}
