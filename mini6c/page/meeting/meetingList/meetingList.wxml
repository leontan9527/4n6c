<wxs src="../../../util/dateutil.wxs" module="df" />
<view class="page__bd">
    <!-- 搜索框    开始-->
    <view>
        <view>
            <view class="weui-search-bar">
                <view class="weui-search-bar__form">
                <!-- 搜索框 -->
                    <view class="weui-search-bar__box">
                        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                        <input type="text"  bindinput='getBlurInputValue' class="weui-search-bar__input" placeholder="请输入会议名称"/>
                    </view>
                </view>
                <!-- 搜索按钮,调用搜索查询方法 -->
                <view class="weui-search-bar__cancel-btn" bindtap='myMeetingPage'>搜索</view>
            </view>
        </view>
    </view>
    <!-- 搜索框    结束-->

    <!-- 会议内容    开始-->
    <view class="weui-panel weui-panel_access">           
        <view class="weui-panel__bd">
            <view wx:if="{{contentlist != ''}}">
                <block wx:for-items="{{contentlist}}" wx:key="id">
                    <view data-meetingid="{{item.id}}" bindtap="toMeetingDetail" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                            <view class="weui-media-box__title">{{item.name}}</view>
                            <view style="margin-top:10px;margin-left:0px;color:#C0C0C0;">
                                会议时间:{{df.formatDate(item.startDate,2)}}至{{df.formatDate(item.endDate,2)}}              
                            </view>
                            <view  style="margin-top:10px;margin-left:0px;color:#C0C0C0;">
                                会议地点:{{item.meetingRoomName}}                    
                            </view>

                            <view class="flex-Container">
                                <view class="containerItem">
                                  <view wx:if="{{item.confirmPrecent>0}}" style="width:130px;color:#C0C0C0;">决议进度{{item.confirmPrecent*100}}%</view>
                                  <view style="width:130px;color:#C0C0C0;" wx:else>未产生会议决议</view>
                                  <progress percent="{{item.confirmPrecent*100}}" stroke-width="3" />
                                </view>
                                <view class="containerItem">
                                    <view class="flex-Container-view" bindtap="showWriteDialog">
                                      <label style="margin-top:2px;margin-left:3px;margin-right:3px;color:#C0C0C0;">{{item.statusName}}</label>
                                    </view>
                                </view>
                            </view>

                        </view>
                    </view>
                </block>
            </view>
            <view wx:else>
                <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__desc">对不起,没有找到记录!</view>
                    </view>
                </view>
            </view>

        </view>
    </view>
    <!-- 会议内容    结束-->
</view>
